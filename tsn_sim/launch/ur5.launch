<?xml version="1.0"?>
<launch>
  <arg name="limited" default="false"/>
  <arg name="paused" default="false"/>
  <arg name="gui" default="true"/>


  <include file="$(find tsn_sim)/launch/table_world.launch">
    <arg name="world_name" default="$(find tsn_sim)/worlds/table_world.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gui)"/>
  </include>

  <!-- place ur5 -->
  <!-- send robot urdf to param server -->
  <include file="$(find tsn_sim)/launch/ur5_upload.launch">
    <arg name="limited" value="$(arg limited)"/>
  </include>

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot 
      -J elbow_joint 2.379
      -J shoulder_lift_joint -1.701
      -J shoulder_pan_joint 0.016
      -J wrist_1_joint -0.675
      -J wrist_2_joint 1.568
      -J wrist_3_joint 0.000" respawn="false" output="screen" />

  <include file="$(find ur_gazebo)/launch/controller_utils.launch"/>
  <!-- startup simulated world -->

  <node name="set_object_init_pose" pkg="tsn_sim" type="set_ur_init_pose" output="screen"/>
  <rosparam  file="$(find ur_gazebo)/controller/arm_controller_ur5.yaml" command="load"/>
  <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>

  <!-- place baxter -->
    
</launch>
